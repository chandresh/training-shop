<h1><%= @product.name %></h1>

<div class="content_half float_l">
  <a rel="lightbox[portfolio]" href="images/product/10_l.jpg"><img src="images/product/10.jpg" alt="image"/></a>
</div>
<div class="content_half float_r">
  <table>
    <tr>
      <td width="160">Price:</td>
      <td><%= number_to_currency @product.price %></td>
    </tr>
    <tr>
      <td>Availability:</td>
      <td><%= @product.in_stock? ? "In Stock" : "Out of Stock" %></td>
    </tr>
    <tr>
      <td>Model:</td>
      <td><%= @product.model_no %></td>
    </tr>
    <tr>
      <td>Manufacturer:</td>
      <td>Apple</td>
    </tr>
    <tr>
      <td>Quantity</td>
      <td><input type="text" value="1" style="width: 20px; text-align: right"/></td>
    </tr>
  </table>
  <div class="cleaner h20"></div>
  <% if @product.in_stock? %>
      <a href="shoppingcart.html" class="addtocart"></a>
  <% else %>
      Notify me when the product is available:
  <input type="text">
  <% end %>
</div>
<div class="cleaner h30"></div>

<h5>Product Description</h5>

<p><%= @product.description %></p>

<div class="cleaner h50"></div>

<h3>Related Products</h3>
<% @product.related_products.each do |product| %>
    <div class="product_box no_margin_right">
      <a href="productdetail.html"><img src="images/product/03.jpg" alt=""/></a>

      <h3><%= product.name %></h3>

      <p class="product_price"><%= number_to_currency product.name %></p>
      <a href="shoppingcart.html" class="addtocart"></a>
      <%= link_to "", product, class: "detail" %>
    </div>
<% end %>