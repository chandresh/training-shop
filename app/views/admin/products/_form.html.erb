<%= simple_form_for [:admin, @product], :html => {:multipart => true} do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :image %>
      <%= f.association :categories, as: :check_boxes %>
      <%= f.association :manufacturers, as: :check_boxes %>

      <%= f.input :description %>
      <%= f.input :inventory %>
      <%= f.input :price %>
      <%= f.input :model_no %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
